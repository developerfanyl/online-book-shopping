    <section id="main">
        <div class="container_12">
            <div id="content" class="grid_12">
                <header>
                    <h1 class="page_title">购物车</h1>
                </header>
                    
                <article>
                    <table class="cart_product">
                        <tr class="bg">
                            <th class="images"></th>
                            <th class="name">名称</th>
                            <th class="price">单价</th>
                            <th class="qty">数量</th>
                            <th class="subtotal">库存</th>
                            <th class="subtotal">总价</th>
                            <th class="close"> </th>
                        </tr>
						 #if(${shoppingCarList} != "[]")
							#foreach($card in $shoppingCarList)
                        <tr>
                            <td class="images"><a code="$!card.bookCode" class="js_list_book"><img src="$!imagesPath$!{card.bookInfoBean.bookPicture}" alt=""></a></td>
                            <td class="name">$!{card.bookInfoBean.bookName}<br /><br />$!{card.bookInfoBean.bookAuthor}<br /><br />$!{card.bookInfoBean.bookPress} $!{card.bookInfoBean.bookPublictionTime}</td>
                            #if($!{card.bookInfoBean.isDiscounts} == 1)
                    			#set($price = $!{card.bookInfoBean.bookPrice} * (1 - $!{card.bookInfoBean.bookDiscounts}))
                              <td class="bg price">￥ $price</td>
                    		#else
                    			<td class="bg price">￥ $!card.bookInfoBean.bookPrice</td>
                    		#end
                            <td class="qty"><input type="text" name="" value="$!{card.bookQuantity}" placeholder="数量" readonly /></td>
                            <td class="bg subtotal">$!card.bookInfoBean.bookCount</td>
							#if($!{card.bookInfoBean.isDiscounts} == 1)
            					#set($total=$!card.bookInfoBean.bookPrice * ( 1 - $!card.bookInfoBean.bookDiscounts) * $!card.bookQuantity)
                              <input type="hidden" value="$total" class="totalV">
            				  <td class="bg subtotal">￥ $total</td>
            				#else
            					#set($total=$!card.bookInfoBean.bookPrice * $!card.bookQuantity)
            					<input type="hidden" value="$total" class="totalV">
            					<td class="bg subtotal">￥ $total</td>
            				#end
                            <td class="close"><a title="close" carCode="$!{card.code}" class="close js_close_car"></a></td>
                        </tr>
							#end
						#else
            				<tr>
                                <td colspan="6">
            						<span style="font-size:10pt;">购物车是空的</span>
            					</td>
                            </tr>
            			#end
                        <tr>
                            <td colspan="7" class="cart_but">
                                <a class="continue"><img src="${rc.contextPath}/resources/images/cont.png" alt="" title="">继续购物</a>
                                <a userCode="$!userCode" class="update js_remove_car"><img src="${rc.contextPath}/resources/images/update.png" alt="" title="">清空购物车</a>
                            </td>
                        </tr>
                    </table>
					
					<script>
                       	$(function(){
                     		$(".js_remove_car").click(function(){
                					if($(this).parent().parent().parent().parent().find("tr").eq(1).text().trim()== "购物车是空的"){
                    						alert("购物车是空的");
                					}else{
                    					var userCode = $(this).attr("userCode");
                    					var data = {
                    						userCode:userCode
                    					};
                    					$.ajax
                						({
                    							type:'get',
                    							url:'removeAllShoppingCar',
                    							data:data,
                    							dataType:'text',
                    							success:function(){
                    								alert("购物车列表清空成功!");
                    								history.go(0);
                    							},
                    							error:function(){
                    								alert("购物车列表清空失败!");
                    							}
                    					})
                					}
                				})
                				$(".continue").click(function(){
                					history.go(-1);
                				})
                       	})
                       </script>
                    
                    <div id="cart_forms">
                        <div class="grid_8">
                            <div class="bottom_block estimate">
                                <h3>收货地址</h3>
                                <p>请选择您详细收货地址，</p>
                                <form>
                                    <p>
                                        #if(${userAddressList} != "[]")
                                		     <select class="selectBox" id="car_address" style="display: none;width:550px">
                                			    <option value="">请选择收货地址</option>
                                				#foreach($list in $userAddressList)
                                			    <option value="$!list.userAddress">$list.userAddress</option>
                                				#end
                                		     </select>
                            			#else
                            				<tr>
                                                <td colspan="6">
                            						<a href="selectAddress?userCode=$!userCode" style="font-size:15pt;">增加新的收货地址</a>
                            					</td>
                                            </tr>
                            			#end
                                    </p>
                                </form>

                            </div><!-- .estimate -->
                        </div><!-- .grid_4 -->

                        <div class="grid_4" style="float:right">
                            <div class="bottom_block total">
                                <table class="subtotal">
                                    <tr>
                                        <td>总计</td><td class="price js_totalV">$1, 500.00</td>
										<input type="hidden" id="totalV_input" value="">
                                    </tr>
                                </table>
								<script>
                        		  	$(function(){
                        				var total = 0;
                        				for(var i = 0;i < $(".totalV").size();i++){
                        					total += parseFloat($(".totalV").eq(i).val());
                        				}
                        				$(".js_totalV").text("￥ "+total);
                        				$("#totalV_input").val(total);
                        			})
                        		  </script>
                                <button class="checkout">去付款<img src="${rc.contextPath}/resources/images/checkout.png" alt="" title=""></button>
                            </div><!-- .total -->
                        </div><!-- .grid_4 -->

                        <div class="clear"></div>
						
						<script>
                			$(function(){
                				$(".checkout").click(function(){
                					var realName = "$!{realName}";
                					var userCode = $!{userCode};
                					var total = $("#totalV_input").val();
                					var userAddress = $("#car_address").val();
                					if(realName == ""){
                						window.location.href="login";
                					}else{
                    					if(total == 0){
                							alert("购物车是空的！");
                						}else if(userAddress == ""){
                							alert("请选择您的收货地址！");
                						}else{
                							var dataOrder = {
                								userCode:userCode,
                								total:total,
                								userAddress:userAddress
                							};
                							$.ajax
                    						({
                    							type:'get',
                    							url:'addOrder',
                    							data:dataOrder,
                    							dataType:'text',
                    							success:function(message){
                    								alert(message);
                    								history.go(0);
                    							},
                    							error:function(){
                    								alert("结算失败!");
                    							}
                    						})
                						}
                					}
                				})
                			})
                		</script>
						
                    </div><!-- #cart_forms -->
                    <div class="clear"></div>
		</article>
                
                <div class="related grid_12">
                    
                        <div class="c_header">
                            <div class="grid_10">
                                <h2>相关推荐</h2>
                            </div><!-- .grid_10 -->

                            <div class="grid_2">
                                <a id="next_c1" class="next arows" href="#"><span>Next</span></a>
                                <a id="prev_c1" class="prev arows" href="#"><span>Prev</span></a>
                            </div><!-- .grid_2 -->
                        </div><!-- .c_header -->

                        <div class="related_list">
                            <ul id="listing" class="products">
                                #foreach($highList in $bookInfoListHigh)
                                <article class="grid_3 article">
                                    <img class="sale" src="${rc.contextPath}/resources/images/top.png" alt="Top">
                                    <div class="prev">
                                        <a code="$!highList.code" class="js_list_book"><img src="$!imagesPath$!{highList.bookPicture}" alt="" title="$!highList.bookName"></a>
                                    </div><!-- .prev -->
            
                                    <h3 class="title">$!highList.bookName</h3>
                                    <div class="cart">
                                        <div class="price">
                                            <div class="vert">
                                                #if($!highList.isDiscounts == 1)
                            						#set($new=$!highList.bookPrice * ( 1 - $!highList.bookDiscounts))
                                                  <div class="price_new">￥ $new</div>
                                                  <div class="price_old">￥ $!highList.bookPrice</div>
                            					#else
                            						<div class="price_new">￥ $!highList.bookPrice</div>
                            					#end 
                                            </div>
                                        </div>
                                        <a code="$!{highList.code}" bookName="$!{highList.bookName}" userCode="$!userCode" class="obn js_obn"></a>
                                        <a code="$!{highList.code}" userCode="$!userCode" class="bay js_bay"><img src="${rc.contextPath}/resources/images/bg_cart.png" alt="Buy" title=""></a>
                                    </div><!-- .cart -->
                                </article><!-- .grid_3.article -->
            					#end
                            </ul><!-- #listing -->
                         </div><!-- .brands_list -->
                </div><!-- .related -->
                    
                <div class="clear"></div>
            </div><!-- #content -->

            <div class="clear"></div>
        </div><!-- .container_12 -->
    </section><!-- #main -->
    <div class="clear"></div>
	
	<script>
				$(function(){
					$(".js_obn").click(function(){
						var code = $(this).attr("code");
						var userCode = $(this).attr("userCode");
						var bookName = $(this).attr("bookName");
						var getData={
        						   bookCode:code,
        						   userCode:userCode,
        						   bookName:bookName
    					};
						$.ajax
						({
							type:'get',
							url:'bookcompareadd',
							data:getData,
							dataType:'text',
							success:function(){
								alert("添加比较列表成功!");
								history.go(0);
							},
							error:function(){
								alert("添加比较列表失败,请检查登录状态!");
							}
						})
					})
					$(".js_bay").click(function(){
						var code = $(this).attr("code");
						var userCode = $(this).attr("userCode");
						var bookQuantity = 1;
						var getData={
								   bookCode:code,
								   userCode:userCode,
								   bookQuantity:bookQuantity
						};
						$.ajax
						({
							type:'get',
							url:'addShoppingCar',
							data:getData,
							dataType:'text',
							success:function(){
								alert("添加购物车成功!");
								history.go(0);
							},
							error:function(){
								alert("添加购物车失败,请检查登录状态!");
							}
						})
					})
				})
			</script>
        
